<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root spacing="5.0" type="VBox" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lbName" text="Label" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Region layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <HBox layoutX="10.0" layoutY="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lbNewest" text="Label" HBox.hgrow="ALWAYS" />
            <Region layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox spacing="5.0">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <VBox>
               <children>
                  <Region VBox.vgrow="ALWAYS" />
                  <Label text="Your Season: " />
                  <Region layoutX="10.0" layoutY="10.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <TextField fx:id="tbProgressSeason" maxWidth="50.0" />
            <VBox layoutX="10.0" layoutY="10.0">
               <children>
                  <Region VBox.vgrow="ALWAYS" />
                  <Label text="Your Episode: " />
                  <Region layoutX="10.0" layoutY="10.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <TextField fx:id="tbProgressEpisode" maxWidth="50.0" />
            <Button fx:id="btAll" mnemonicParsing="false" text="All" />
            <Button fx:id="btSave" mnemonicParsing="false" text="Save" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets right="5.0" top="5.0" />
         </padding>
      </HBox>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btOpenSeries" mnemonicParsing="false" text="Open in Browser" />
            <ImageView fx:id="imgCover" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </HBox>
   </children>
</fx:root>
